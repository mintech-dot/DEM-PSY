                borderColor: 'white',
                tension: 0.1
                }]
            };
        
            // Chart options
            const options = {
                scales: {
                y: {
                    beginAtZero: true
                }
                }
            };
        
            // Create chart
            const ctx = document.getElementById('myChart').getContext('2d');
            const myChart = new Chart(ctx, {
                type: 'line',
                data: data,
                options: options
            });
